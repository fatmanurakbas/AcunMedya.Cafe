@model AcunMedya.Cafe.Entities.Testimonial

@{
    ViewData["Title"] = "Yorum Güncelle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Kullanıcı Yorumu Güncelle </h3>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="TestimonialId" />
                        <input type="hidden" asp-for="imageUrl" />

                        <label>Başlık</label>
                        <input asp-for="Title" class="form-control" />
                        <br />

                        <label>Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <br />

                        <label>Puan (1-5)</label>
                        <input asp-for="raiting" type="number" min="1" max="5" class="form-control" />
                        <br />

                        <label>Mevcut Görsel</label><br />
                        <img src="@Model.imageUrl" style="width:120px;" class="img-thumbnail" />
                        <br /><br />

                        <label>Yeni Görsel Seç (Opsiyonel)</label>
                        <input type="file" asp-for="ImageFile" class="form-control" />
                        <br />

                        <button class="btn btn-primary">
                            <i class="fa fa-save"></i> Güncelle
                        </button>
                        <a href="/Testimonial/Index" class="btn btn-light">İptal</a>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

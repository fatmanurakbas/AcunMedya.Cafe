@model List<AcunMedya.Cafe.Entities.Blog>

@{
    ViewData["Title"] = "Blog Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<style>
    .card {
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: none;
    }

    .table thead {
        background-color: #f7f7f7;
        color: #333;
        font-weight: 600;
        border-bottom: 2px solid #ddd;
    }


    .btn-update {
        background-color: #fff4e6;
        color: #ff9800;
        border: 1px solid #ffe0b2;
        border-radius: 10px;
        padding: 4px 8px;
        font-size: 0.85rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .btn-update:hover {
        background-color: #ffe0b2;
    }

    .btn-delete {
        background-color: #ffe6e6;
        color: #dc3545;
        border: 1px solid #f5b4b4;
        border-radius: 10px;
        padding: 4px 8px;
        font-size: 0.85rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .btn-delete:hover {
       background-color: #ffdddd;
    }

    .table {
        table-layout: fixed;
        width: 100%;
    }

    .table td, .table th {
        white-space: normal !important;
        word-wrap: break-word;
    }

    .description-cell {
        max-width: 300px;
        white-space: normal !important;
        word-wrap: break-word;
    }

    .img-rounded {
        border-radius: 50%;
        border: 2px solid #ddd;
        height: 60px;
        width: 60px;
        object-fit: cover;
    }
</style>

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> 📚 Blog Tablosu </h3>
        <a href="/Blog/AddBlog" class="btn btn-gradient-success">
            <i class="fa fa-plus-circle"></i> ➕ Yeni Blog Ekle
        </a>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">📋 Tablo</a></li>
                <li class="breadcrumb-item active" aria-current="page">📚 Blog</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#️⃣</th>
                                <th>📝 Başlık</th>
                                <th>📝 Alt Başlık</th>
                                <th>🧾 Açıklama</th>
                                <th>🖼️ Görsel</th>
                                <th>📅 Tarih</th>
                                <th>✏️ Güncelle</th>
                                <th>🗑️ Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Title</td>
                                    <td>@item.Subtitle</td>
                                    <td class="description-cell">
                                        <div style="word-wrap: break-word;">
                                            @item.Description
                                        </div>
                                    </td>
                                    <td>
                                        <img src="@item.ImageUrl" class="img-rounded" />
                                    </td>
                                    <td>
                                        @(item.Time.Year > 1900 ? item.Time.ToString("dd.MM.yyyy") : "Belirtilmedi")
                                    </td>
                                    <td>
                                        <a href="/Blog/UpdateBlog/@item.BlogId" class="btn btn-update">
                                            ✏️ Güncelle
                                        </a>
                                    </td>
                                    <td>
                                        <a onclick="DeleteBlog(@item.BlogId)" class="btn btn-delete">
                                            🗑️ Sil
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function DeleteBlog(id) {
        Swal.fire({
            title: "Silmek istediğinizden emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Blog/DeleteBlog/" + id;
            }
        });
    }
</script>

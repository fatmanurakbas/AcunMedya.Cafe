@model List<AcunMedya.Cafe.Entities.About>

@{
    Layout = null;
}

<section class="video-sec-area pb-100 pt-40" id="about">
    <div class="container">
        <div class="row align-items-center">
            @if (Model != null && Model.Any())
            {
                var aboutItem = Model.First();

                <!-- Solda: Fotoğraf ve Play Butonu -->
                <div class="col-lg-6 position-relative">
                    <div style="position: relative; display: inline-block;">
                        <!-- Görsel -->
                        <img src="~/images/about-coffee4.jpg" alt="About Image"
                             class="img-fluid rounded shadow-sm"
                             style="width: 100%; height: auto; max-height: 700px; object-fit: cover;" />

                        <!-- Play icon (üstünde) -->
                        <a href="https://www.youtube.com/watch?v=ARA0AxrnHdM" target="_blank"
                           style="
                                position: absolute;
                                top: 50%;
                                left: 50%;
                                transform: translate(-50%, -50%);
                                z-index: 10;
                                    ">
                            <img src="~/coffee-master/img/play-icon.png" alt=""
                                 style="width: 80px; height: 80px;" />
                        </a>
                    </div>
                </div>

                <!-- Sağda: Yazılar -->
                <div class="col-lg-6">
                    <h6 class="text-uppercase text-muted">COFFEE YAPIM SÜRECİNİ CANLI İZLEYİN</h6>
                    <h1 class="mb-3">Kahve Yapımını Canlı Yayında Paylaşıyoruz</h1>
                    <p class="font-weight-bold">@aboutItem.Title</p>
                    <p>@aboutItem.Description</p>
                    <img src="@aboutItem.imageUrl" alt="About Image"
                         class="img-fluid rounded shadow-sm"
                         style="width: 100%; height: auto; max-height: 400px; object-fit: cover;" />

                </div>
            }
            else
            {
                <p>Henüz içerik eklenmedi.</p>
            }
        </div>
    </div>
</section>

@model List<AcunMedya.Cafe.Entities.Gallery>

<section class="gallery-area section-gap" id="gallery">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-60 col-lg-10">
                <div class="title text-center">
                    <h1 class="mb-10">Kahve kokusunu hissedeceğiniz kareler</h1>
                    <p>Kahvenin en özel hallerini keşfedin</p>
                </div>
            </div>
        </div>

        <div class="row">
            @* İlk iki görsel: sol sütun *@
            <div class="col-lg-4">
                @if (Model.Count > 0)
                {
                    <a href="@Model[0].ImageUrl" class="img-pop-home">
                        <img class="img-fluid" src="@Model[0].ImageUrl" alt="">
                    </a>
                }
                @if (Model.Count > 1)
                {
                    <a href="@Model[1].ImageUrl" class="img-pop-home">
                        <img class="img-fluid" src="@Model[1].ImageUrl" alt="">
                    </a>
                }
            </div>

            @* Diğer görseller: sağ sütun *@
            <div class="col-lg-8">
                @if (Model.Count > 2)
                {
                    <a href="@Model[2].ImageUrl" class="img-pop-home">
                        <img class="img-fluid" src="@Model[2].ImageUrl" alt="">
                    </a>
                }
                <div class="row">
                    <div class="col-lg-6">
                        @if (Model.Count > 3)
                        {
                            <a href="@Model[3].ImageUrl" class="img-pop-home">
                                <img class="img-fluid" src="@Model[3].ImageUrl" alt="">
                            </a>
                        }
                    </div>
                    <div class="col-lg-6">
                        @if (Model.Count > 4)
                        {
                            <a href="@Model[4].ImageUrl" class="img-pop-home">
                                <img class="img-fluid" src="@Model[4].ImageUrl" alt="">
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

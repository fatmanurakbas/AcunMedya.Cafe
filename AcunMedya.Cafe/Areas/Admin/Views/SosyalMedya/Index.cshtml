@model List<AcunMedya.Cafe.Entities.SosyalMedya>
@{
    ViewData["Title"] = "Sosyal Medya Hesapları";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<style>
    .card {
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: none;
    }

    .table thead {
        background-color: #f7f7f7;
        color: #333;
        font-weight: 600;
        border-bottom: 2px solid #ddd;
    }

    .table td, .table th {
        vertical-align: middle !important;
    }

    .btn-update {
        background-color: #e6f0ff;
        color: #007bff;
        border: 1px solid #cce0ff;
        border-radius: 10px;
        padding: 8px 16px;
        font-size: 0.95rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .btn-update:hover {
            background-color: #d4e8ff;
        }

    .btn-delete {
        background-color: #ffe6e6;
        color: #dc3545;
        border: 1px solid #f5b4b4;
        border-radius: 10px;
        padding: 8px 16px;
        font-size: 0.95rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .btn-delete:hover {
            background-color: #ffdddd;
        }

    .btn-add {
        background-color: #e6f0ff;
        color: #007bff;
        border: 1px solid #cce0ff;
        border-radius: 10px;
        padding: 8px 16px;
        font-size: 0.95rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .btn-add:hover {
            background-color: #d4e8ff;
        }
</style>

<div class="content-wrapper">
    <div class="page-header d-flex justify-content-between align-items-center">
        <h3 class="page-title"> 🌐 Sosyal Medya Hesapları </h3>
        <a href="/SosyalMedya/AddSosyalMedya" class="btn btn-gradient-success">
            <i class="fa fa-plus-circle"></i> ➕ Yeni HEsap Ekle
        </a>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#️⃣</th>
                                <th>📱 Platform</th>
                                <th>🔗 Bağlantı</th>
                                <th>⚙️ İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td><a href="@item.Url" target="_blank">@item.Url</a></td>
                                    <td>
                                        <a href="/SosyalMedya/UpdateSosyalMedya/@item.SosyalMedyaId" class="btn btn-update">
                                            ✏️ Güncelle
                                        </a>
                                        <a onclick="deleteSosyalMedya(@item.SosyalMedyaId)" class="btn btn-delete">
                                            🗑️ Sil
                                        </a>
                                    </td>
                                </tr>
                            }
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Henüz sosyal medya hesabı eklenmemiş.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function deleteSosyalMedya(id) {
        Swal.fire({
            title: "Silmek istediğinizden emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/SosyalMedya/DeleteSosyalMedya/" + id;
            }
        });
    }
</script>
